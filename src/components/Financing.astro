---
interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<section class:list={["section-container bg-silver-light", className]} id="financing">
  <div class="grid lg:grid-cols-2 gap-12 items-center">
    <div>
      <h2 class="text-3xl md:text-4xl font-bold text-navy mb-6 mt-0">
        Flexible Financing Options
      </h2>
      <p class="text-lg text-gray-700 mb-6">
        Don't let finances delay your restoration. We offer flexible payment plans to fit your budget.
      </p>
      <ul class="space-y-3 mb-8">
        <li class="flex items-start gap-3">
          <svg class="w-6 h-6 text-aqua flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
          <span class="text-gray-700">0% interest for qualified customers</span>
        </li>
        <li class="flex items-start gap-3">
          <svg class="w-6 h-6 text-aqua flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
          <span class="text-gray-700">Extended payment terms available</span>
        </li>
        <li class="flex items-start gap-3">
          <svg class="w-6 h-6 text-aqua flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
          <span class="text-gray-700">Quick approval process</span>
        </li>
      </ul>
      <a href="/financing" class="btn-primary inline-block">
        Learn More About Financing
      </a>
    </div>
    
    <div class="group">
      <img 
        src="/img/general/financing-hero.webp" 
        alt="Financing Options"
        class="rounded-2xl shadow-xl w-full transition-transform duration-300 group-hover:scale-105"
      />
    </div>
  </div>
</section>
