---
import { getCompanyData, formatPhone } from "../lib/company";

interface Props {
  class?: string;
}

const { class: className } = Astro.props;

// Fetch live company data from Supabase (with fallback)
const dbCompany = await getCompanyData();

const companyData = {
  name: dbCompany.company_name,
  phone: formatPhone(dbCompany.phone),
  email: dbCompany.email ?? "info@aquashieldrestorationusa.com",
  ein: "36-5164436",
  address: {
    full:
      dbCompany.address ?? "3733 Westheimer Rd. Ste 1-4583, Houston, TX 77027",
  },
  social: {
    facebook:
      dbCompany.facebook_link ??
      "https://facebook.com/aquashieldrestorationusa",
    instagram:
      dbCompany.instagram_link ??
      "https://instagram.com/aquashieldrestorationusa",
    twitter: dbCompany.twitter_link ?? "https://twitter.com/aquashieldrest",
    linkedin:
      dbCompany.linkedin_link ??
      "https://linkedin.com/company/aquashieldrestorationusa",
  },
};

const footerLinks = {
  quickLinks: [
    { href: "/", label: "Home" },
    { href: "/about", label: "About Us" },
    { href: "/portfolio", label: "Portfolio" },
    { href: "/financing", label: "Financing" },
  ],
  services: [
    { href: "/new-roof", label: "New Roof Installation" },
    { href: "/roof-repair", label: "Roof Repair" },
    { href: "/storm-damage", label: "Storm Damage" },
    { href: "/hail-damage", label: "Hail Damage" },
  ],
  support: [
    { href: "/contact", label: "Contact" },
    { href: "/contact-support", label: "Contact Support" },
    { href: "/faqs", label: "FAQs" },
    { href: "/warranties", label: "Warranties" },
  ],
  legal: [
    { href: "/privacy-policy", label: "Privacy Policy" },
    { href: "/terms-and-conditions", label: "Terms & Conditions" },
    { href: "/cookies-policy", label: "Cookie Settings" },
    { href: "/privacy-request", label: "Privacy Request (DSAR)" },
    { href: "/privacy-policy#do-not-sell", label: "Do Not Sell My Info" },
  ],
};
