---
interface Props {
  class?: string;
}

const { class: className } = Astro.props;

// Secondary/additional services not covered in the primary Services.astro component
const additionalServices = [
  {
    title: "Water Mitigation",
    description: "Rapid water mitigation to stop damage and prevent mold growth instantly.",
    image: "/img/services/water-mitigation.webp",
    link: "/water-mitigation",
    icon: "üíß"
  },
  {
    title: "Fire & Smoke Damage",
    description: "Soot removal, deodorization, and complete fire damage reconstruction.",
    image: "/img/services/fire-damage.webp",
    link: "/fire-damage",
    icon: "üî•"
  },
  {
    title: "Emergency Tarping",
    description: "Blue Tarp and shrink wrap services to secure your roof after a storm.",
    image: "/img/services/tarp.webp",
    link: "/emergency-tarping",
    icon: "üè†"
  },
  {
    title: "Sewage Cleanup",
    description: "Hazardous wastewater bio-extraction and professional protocol disinfection.",
    image: "/img/services/sewage-cleanup.webp",
    link: "/sewage-cleanup",
    icon: "‚ò£Ô∏è"
  },
  {
    title: "Large Loss Restoration",
    description: "Commercial, industrial, and multi-family disaster recovery services.",
    image: "/img/services/storm-damage.webp",
    link: "/large-loss",
    icon: "üè¢"
  },
  {
    title: "HVAC Decontamination",
    description: "Air duct and HVAC cleaning after smoke, fire, or severe mold contamination.",
    image: "/img/services/hvac-decontamination.webp",
    link: "/hvac-decontamination",
    icon: "‚ùÑÔ∏è"
  }
];
---

<section class:list={["bg-white py-12 md:py-20", className]} id="additional-services">
  <div class="container mx-auto px-4">
    <div class="text-center max-w-3xl mx-auto mb-16 fade-in-section">
      <span class="inline-block text-aqua font-bold text-xl md:text-2xl uppercase tracking-widest mb-4">
        Specialized Solutions
      </span>
      <h2 class="text-3xl md:text-5xl font-bold text-navy mb-4">
        More Ways We Can Help
      </h2>
      <p class="text-gray-600 text-lg">
        Explore our specialized restoration services designed to handle every aspect of disaster recovery for residential and commercial properties.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {additionalServices.map((service, index) => (
        <a 
          href={service.link} 
          class="group block rounded-2xl overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2 fade-in-section bg-gray-50 border border-gray-100"
          style={`animation-delay: ${0.1 * index}s`}
        >
          <!-- Image Container with Hover Effect -->
          <div class="relative h-56 w-full overflow-hidden">
            <img 
              src={service.image} 
              alt={service.title} 
              class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
            />
            <div class="absolute inset-0 bg-linear-to-t from-navy/90 via-navy/40 to-transparent opacity-80 group-hover:opacity-90 transition-opacity"></div>
            
            <!-- Icon floating on image -->
            <div class="absolute top-4 right-4 bg-white/20 backdrop-blur-md rounded-full w-12 h-12 flex items-center justify-center text-2xl shadow-md border border-white/30 group-hover:scale-110 transition-transform duration-300">
              {service.icon}
            </div>
          </div>

          <!-- Content Below Image -->
          <div class="p-6 relative text-center md:text-left">
            <h3 class="text-xl font-bold text-navy mb-3 group-hover:text-aqua transition-colors duration-300 flex items-center justify-center md:justify-between flex-wrap gap-2">
              {service.title}
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 opacity-0 group-hover:opacity-100 transition-all duration-300 text-aqua hidden md:block" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
              </svg>
            </h3>
            <p class="text-gray-600 line-clamp-2 w-full">
              {service.description}
            </p>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>

<style>
  .fade-in-section {
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 0.8s ease-out forwards;
  }

  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .fade-in-section {
      animation: none;
      opacity: 1;
      transform: none;
    }
  }
</style>
