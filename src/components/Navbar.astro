---
// Navbar component for AquaShield Restoration
// Mobile-responsive navigation with drawer and emergency phone number

interface Props {
  class?: string;
}

const { class: className } = Astro.props;

const navLinks = [
  { href: "/", label: "Home" },
  { 
    label: "Services",
    submenu: [
      { href: "/new-roof", label: "New Roof" },
      { href: "/roof-repair", label: "Roof Repair" },
      { href: "/storm-damage", label: "Storm Damage" },
      { href: "/hail-damage", label: "Hail Damage" },
    ]
  },
  { href: "/about", label: "About" },
  { href: "/portfolio", label: "Portfolio" },
  { href: "/financing", label: "Financing" },
  { href: "/warranties", label: "Warranties" },
  { href: "/faqs", label: "FAQs" },
  { href: "/contact-support", label: "Contact Support" },
];

const companyData = {
  name: "AquaShield",
  tagline: "Restoration LLC",
  phone: "(713) 587-6423",
  emergencyPhone: "(713) 587-6423",
};

// Get current path for active state
const currentPath = Astro.url.pathname;
---

<header
  x-data="{
    isScrolled: false,
    isDrawerOpen: false
  }"
  @scroll.window="isScrolled = (window.pageYOffset > 20)"
  :class="{ 'bg-white shadow-md': isScrolled, 'bg-transparent': !isScrolled }"
  class:list={["fixed top-0 left-0 right-0 z-50 transition-all duration-300", className]}
  id="navbar"
>
  <!-- Top bar with emergency number - Desktop only -->
  <div class="bg-navy text-white py-3 hidden md:block">
    <div class="container mx-auto px-4 flex justify-between items-center text-sm min-h-[40px]">
      <div class="flex items-center gap-6">
        <a href={`tel:${companyData.phone.replace(/[^0-9]/g, '')}`} class="flex items-center gap-2 hover:text-aqua transition-colors">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          <span>{companyData.phone}</span>
        </a>
        <span class="text-gray-400">|</span>
        <span class="flex items-center gap-2">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <span>24/7 Emergency Service Available</span>
        </span>
      </div>
      <a 
        href={`tel:${companyData.emergencyPhone.replace(/[^0-9]/g, '')}`} 
        class="btn-emergency text-sm px-4 py-1 rounded-full font-medium flex items-center gap-2"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
        </svg>
        Emergency: {companyData.emergencyPhone}
      </a>
    </div>
  </div>

  <!-- Main navigation -->
  <div class="bg-white/95 backdrop-blur-md shadow-md transition-all duration-300" id="main-nav">
    <div class="container mx-auto px-4">
      <div class="flex justify-between items-center h-16 md:h-20">
        <!-- Logo -->
        <a href="/" class="flex items-center gap-3 group">
          <img
            src="/Logo PNG.png"
            alt="AquaShield Restoration Logo"
            width="72"
            height="64"
            class="h-12 md:h-16 w-auto transition-transform duration-300 group-hover:scale-105"
          />
        </a>

        <!-- Mobile menu button -->
        <button 
          @click="isDrawerOpen = !isDrawerOpen"
          class="md:hidden text-navy hover:text-aqua transition-colors"
          aria-label="Toggle menu"
        >
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path x-show="!isDrawerOpen" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            <path x-show="isDrawerOpen" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>

        <!-- Desktop Navigation with dropdown -->
        <nav class="hidden md:flex items-center gap-8">
          {navLinks.map((link) => {
            const isActive = 'href' in link && link.href === currentPath;
            const hasActiveSubmenu = 'submenu' in link && link.submenu.some(sub => sub.href === currentPath);
            
            return (
              'submenu' in link ? (
                <div class="relative group" x-data="{ servicesOpen: false }">
                  <button
                    @click="servicesOpen = !servicesOpen"
                    @click.outside="servicesOpen = false"
                    class:list={[
                      "text-base font-semibold hover:text-aqua transition-colors py-2 flex items-center gap-1 cursor-pointer",
                      hasActiveSubmenu ? "text-aqua" : "text-navy"
                    ]}
                  >
                    {link.label}
                    <svg class="w-4 h-4 transition-transform duration-200" :class="{ 'rotate-180': servicesOpen }" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                    </svg>
                  </button>
                  
                  <!-- Dropdown menu -->
                  <div
                    x-show="servicesOpen"
                    x-cloak
                    class="absolute top-full left-0 mt-2 w-48 bg-white rounded-lg shadow-xl z-50"
                    x-transition:enter="transition ease-out duration-200"
                    x-transition:enter-start="opacity-0 transform scale-95"
                    x-transition:enter-end="opacity-100 transform scale-100"
                    x-transition:leave="transition ease-in duration-150"
                    x-transition:leave-start="opacity-100 transform scale-100"
                    x-transition:leave-end="opacity-0 transform scale-95"
                  >
                    <div class="py-2">
                      {link.submenu.map((sublink) => {
                        const isSubActive = sublink.href === currentPath;
                        return (
                          <a
                            href={sublink.href}
                            @click="servicesOpen = false"
                            class:list={[
                              "block px-4 py-2 font-semibold transition-colors",
                              isSubActive ? "bg-aqua/10 text-aqua hover:bg-aqua hover:!text-white" : "text-navy hover:bg-aqua hover:!text-white"
                            ]}
                          >
                            {sublink.label}
                          </a>
                        );
                      })}
                    </div>
                  </div>
                </div>
              ) : (
                <a 
                  href={link.href} 
                  class:list={[
                    "text-base font-semibold hover:text-aqua transition-colors relative group py-2",
                    isActive ? "text-aqua" : "text-navy"
                  ]}
                >
                  {link.label}
                  <span class:list={[
                    "absolute bottom-0 left-0 h-0.5 bg-aqua transition-all duration-300",
                    isActive ? "w-full" : "w-0 group-hover:w-full"
                  ]}></span>
                </a>
              )
            );
          })}
          
          <!-- Language Dropdown -->
          <div class="relative" x-data="{ currentLang: 'en', langOpen: false }">
            <button
              @click="langOpen = !langOpen"
              @click.outside="langOpen = false"
              class="flex items-center gap-2 text-navy hover:text-aqua transition-colors py-2 px-3 rounded-lg hover:bg-gray-50 cursor-pointer"
              aria-label="Select language"
            >
              <!-- Current Language Flag -->
              <div class="w-5 h-5 rounded-sm overflow-hidden">
                <svg x-show="currentLang === 'en'" class="w-full h-full" viewBox="0 0 640 480">
                  <defs>
                    <clipPath id="us-flag">
                      <path d="M0 0h640v480H0z"/>
                    </clipPath>
                  </defs>
                  <g clip-path="url(#us-flag)">
                    <path fill="#bd3d44" d="M0 0h640v480H0"/>
                    <path stroke="#fff" stroke-width="37" d="M0 55.3h640M0 129h640M0 203h640M0 277h640M0 351h640M0 425h640"/>
                    <path fill="#192f5d" d="M0 0h364.8v258.5H0"/>
                    <g fill="#fff">
                      <g id="us-star">
                        <path d="m30.4 11 2.3 7.1h7.5l-6.1 4.4 2.3 7.1-6.1-4.4-6.1 4.4 2.3-7.1-6.1-4.4h7.5z"/>
                      </g>
                      <use href="#us-star" transform="translate(63,0)"/>
                      <use href="#us-star" transform="translate(126,0)"/>
                      <use href="#us-star" transform="translate(189,0)"/>
                      <use href="#us-star" transform="translate(252,0)"/>
                      <use href="#us-star" transform="translate(315,0)"/>
                      <use href="#us-star" transform="translate(31.5,24)"/>
                      <use href="#us-star" transform="translate(94.5,24)"/>
                      <use href="#us-star" transform="translate(157.5,24)"/>
                      <use href="#us-star" transform="translate(220.5,24)"/>
                      <use href="#us-star" transform="translate(283.5,24)"/>
                    </g>
                  </g>
                </svg>
                <svg x-show="currentLang === 'es'" class="w-full h-full" viewBox="0 0 640 480">
                  <path fill="#aa151b" d="M0 0h640v480H0z"/>
                  <path fill="#f1bf00" d="M0 120h640v240H0z"/>
                </svg>
              </div>
              <span class="text-sm font-medium" x-text="currentLang === 'en' ? 'EN' : 'ES'"></span>
              <svg class="w-4 h-4 transition-transform duration-200" :class="{ 'rotate-180': langOpen }" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
              </svg>
            </button>
            
            <!-- Language Dropdown Menu -->
            <div
              x-show="langOpen"
              x-cloak
              class="absolute top-full right-0 mt-2 w-40 bg-white rounded-lg shadow-xl border border-gray-100 z-50"
              x-transition:enter="transition ease-out duration-200"
              x-transition:enter-start="opacity-0 transform scale-95"
              x-transition:enter-end="opacity-100 transform scale-100"
              x-transition:leave="transition ease-in duration-150"
              x-transition:leave-start="opacity-100 transform scale-100"
              x-transition:leave-end="opacity-0 transform scale-95"
            >
              <div class="py-2">
                <!-- English Option -->
                <button
                  @click="currentLang = 'en'; langOpen = false"
                  class="w-full flex items-center gap-3 px-4 py-2 text-left hover:bg-aqua hover:text-white transition-colors cursor-pointer"
                  :class="{ 'bg-aqua/10 text-aqua': currentLang === 'en' }"
                >
                  <div class="w-6 h-4 rounded-sm overflow-hidden flex-shrink-0">
                    <svg class="w-full h-full" viewBox="0 0 640 480">
                      <defs>
                        <clipPath id="us-flag-small">
                          <path d="M0 0h640v480H0z"/>
                        </clipPath>
                      </defs>
                      <g clip-path="url(#us-flag-small)">
                        <path fill="#bd3d44" d="M0 0h640v480H0"/>
                        <path stroke="#fff" stroke-width="37" d="M0 55.3h640M0 129h640M0 203h640M0 277h640M0 351h640M0 425h640"/>
                        <path fill="#192f5d" d="M0 0h364.8v258.5H0"/>
                        <g fill="#fff">
                          <g id="us-star-small">
                            <path d="m30.4 11 2.3 7.1h7.5l-6.1 4.4 2.3 7.1-6.1-4.4-6.1 4.4 2.3-7.1-6.1-4.4h7.5z"/>
                          </g>
                          <use href="#us-star-small" transform="translate(63,0)"/>
                          <use href="#us-star-small" transform="translate(126,0)"/>
                          <use href="#us-star-small" transform="translate(189,0)"/>
                          <use href="#us-star-small" transform="translate(252,0)"/>
                          <use href="#us-star-small" transform="translate(315,0)"/>
                        </g>
                      </g>
                    </svg>
                  </div>
                  <span class="font-medium">English</span>
                </button>
                
                <!-- Spanish Option -->
                <button
                  @click="currentLang = 'es'; langOpen = false"
                  class="w-full flex items-center gap-3 px-4 py-2 text-left hover:bg-aqua hover:text-white transition-colors cursor-pointer"
                  :class="{ 'bg-aqua/10 text-aqua': currentLang === 'es' }"
                >
                  <div class="w-6 h-4 rounded-sm overflow-hidden flex-shrink-0">
                    <svg class="w-full h-full" viewBox="0 0 640 480">
                      <path fill="#aa151b" d="M0 0h640v480H0z"/>
                      <path fill="#f1bf00" d="M0 120h640v240H0z"/>
                    </svg>
                  </div>
                  <span class="font-medium">Español</span>
                </button>
              </div>
            </div>
          </div>
        </nav>

        <!-- CTA Button - Desktop -->
        <button
          onclick="openInspectionModal()"
          class="hidden md:inline-flex btn-primary text-sm whitespace-nowrap cursor-pointer"
          type="button"
          aria-label="Get Free Inspection"
        >
          Get Free Inspection
        </button>
      </div>
    </div>
  </div>

  <!-- Overlay for drawer -->
  <div 
    x-show="isDrawerOpen" 
    x-transition:enter="transition-opacity ease-out duration-300"
    x-transition:enter-start="opacity-0" 
    x-transition:enter-end="opacity-100"
    x-transition:leave="transition-opacity ease-in duration-300" 
    x-transition:leave-start="opacity-100"
    x-transition:leave-end="opacity-0" 
    class="fixed inset-0 bg-black/50 z-40 md:hidden"
    @click="isDrawerOpen = false"
  >
  </div>

  <!-- Mobile Drawer -->
  <div 
    x-show="isDrawerOpen" 
    x-transition:enter="transition ease-out duration-300"
    x-transition:enter-start="-translate-x-full" 
    x-transition:enter-end="translate-x-0"
    x-transition:leave="transition ease-in duration-300" 
    x-transition:leave-start="translate-x-0"
    x-transition:leave-end="-translate-x-full"
    class="fixed inset-y-0 left-0 w-64 bg-white shadow-lg transform md:hidden z-50 overflow-y-auto"
    @click.away="isDrawerOpen = false"
  >
    <div class="p-6 space-y-4">
      <!-- Logo centered at top -->
      <div class="flex justify-center mb-8">
        <img src="/Logo PNG.png" alt="AquaShield Restoration Logo" width="54" height="48" class="h-12">
      </div>

      <!-- Navigation items -->
      <a 
        href="/"
        class:list={[
          "block py-2.5 px-4 rounded transition duration-200 font-semibold hover:bg-gray-100",
          currentPath === "/" ? "bg-aqua/10 text-aqua" : "text-navy"
        ]}
      >
        Home
      </a>

      <!-- Services Dropdown in Drawer -->
      <div x-data="{ isOpen: false }" class="relative" @click.away="isOpen = false">
        <button 
          @click="isOpen = !isOpen"
          class:list={[
            "flex items-center justify-between w-full py-2.5 px-4 rounded transition duration-200 hover:bg-gray-100 font-semibold",
            ["/new-roof", "/roof-repair", "/storm-damage", "/hail-damage"].includes(currentPath) ? "text-aqua" : "text-navy"
          ]}
        >
          <span>Services</span>
          <svg 
            class="w-4 h-4 transition-transform duration-200" 
            :class="{ 'rotate-180': isOpen }"
            fill="none" 
            stroke="currentColor" 
            viewBox="0 0 24 24"
          >
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
          </svg>
        </button>
        <div x-show="isOpen" class="pl-4">
          <a href="/new-roof" class:list={["block py-2 px-4 rounded hover:bg-gray-100", currentPath === "/new-roof" ? "bg-aqua/10 text-aqua font-semibold" : "text-gray-700"]}>New Roof</a>
          <a href="/roof-repair" class:list={["block py-2 px-4 rounded hover:bg-gray-100", currentPath === "/roof-repair" ? "bg-aqua/10 text-aqua font-semibold" : "text-gray-700"]}>Roof Repair</a>
          <a href="/storm-damage" class:list={["block py-2 px-4 rounded hover:bg-gray-100", currentPath === "/storm-damage" ? "bg-aqua/10 text-aqua font-semibold" : "text-gray-700"]}>Storm Damage</a>
          <a href="/hail-damage" class:list={["block py-2 px-4 rounded hover:bg-gray-100", currentPath === "/hail-damage" ? "bg-aqua/10 text-aqua font-semibold" : "text-gray-700"]}>Hail Damage</a>
        </div>
      </div>

      <a href="/about" class:list={["block py-2.5 px-4 rounded transition duration-200 font-semibold hover:bg-gray-100", currentPath === "/about" ? "bg-aqua/10 text-aqua" : "text-navy"]}>About</a>
      <a href="/portfolio" class:list={["block py-2.5 px-4 rounded transition duration-200 font-semibold hover:bg-gray-100", currentPath === "/portfolio" ? "bg-aqua/10 text-aqua" : "text-navy"]}>Portfolio</a>
      <a href="/financing" class:list={["block py-2.5 px-4 rounded transition duration-200 font-semibold hover:bg-gray-100", currentPath === "/financing" ? "bg-aqua/10 text-aqua" : "text-navy"]}>Financing</a>
      <a href="/warranties" class:list={["block py-2.5 px-4 rounded transition duration-200 font-semibold hover:bg-gray-100", currentPath === "/warranties" ? "bg-aqua/10 text-aqua" : "text-navy"]}>Warranties</a>
      <a href="/faqs" class:list={["block py-2.5 px-4 rounded transition duration-200 font-semibold hover:bg-gray-100", currentPath === "/faqs" ? "bg-aqua/10 text-aqua" : "text-navy"]}>FAQs</a>
      <a href="/contact-support" class:list={["block py-2.5 px-4 rounded transition duration-200 font-semibold hover:bg-gray-100", currentPath === "/contact-support" ? "bg-aqua/10 text-aqua" : "text-navy"]}>Contact Support</a>

      <!-- Language Selector - Mobile -->
      <div x-data="{ isOpen: false, currentLang: 'en' }" class="relative" @click.away="isOpen = false">
        <button 
          @click="isOpen = !isOpen"
          class="flex items-center justify-between w-full py-2.5 px-4 rounded transition duration-200 hover:bg-gray-100 font-semibold text-navy cursor-pointer"
        >
          <div class="flex items-center gap-3">
            <div class="w-5 h-4 rounded-sm overflow-hidden">
              <svg x-show="currentLang === 'en'" class="w-full h-full" viewBox="0 0 640 480">
                <defs>
                  <clipPath id="us-flag-mobile">
                    <path d="M0 0h640v480H0z"/>
                  </clipPath>
                </defs>
                <g clip-path="url(#us-flag-mobile)">
                  <path fill="#bd3d44" d="M0 0h640v480H0"/>
                  <path stroke="#fff" stroke-width="37" d="M0 55.3h640M0 129h640M0 203h640M0 277h640M0 351h640M0 425h640"/>
                  <path fill="#192f5d" d="M0 0h364.8v258.5H0"/>
                </g>
              </svg>
              <svg x-show="currentLang === 'es'" class="w-full h-full" viewBox="0 0 640 480">
                <path fill="#aa151b" d="M0 0h640v480H0z"/>
                <path fill="#f1bf00" d="M0 120h640v240H0z"/>
              </svg>
            </div>
            <span x-text="currentLang === 'en' ? 'Language (English)' : 'Idioma (Español)'"></span>
          </div>
          <svg 
            class="w-4 h-4 transition-transform duration-200" 
            :class="{ 'rotate-180': isOpen }"
            fill="none" 
            stroke="currentColor" 
            viewBox="0 0 24 24"
          >
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
          </svg>
        </button>
        <div x-show="isOpen" class="pl-4">
          <button 
            @click="currentLang = 'en'; isOpen = false" 
            class="flex items-center gap-3 w-full py-2 px-4 rounded hover:bg-gray-100 text-left cursor-pointer"
            :class="{ 'bg-aqua/10 text-aqua font-semibold': currentLang === 'en', 'text-gray-700': currentLang !== 'en' }"
          >
            <div class="w-5 h-4 rounded-sm overflow-hidden">
              <svg class="w-full h-full" viewBox="0 0 640 480">
                <defs>
                  <clipPath id="us-flag-option">
                    <path d="M0 0h640v480H0z"/>
                  </clipPath>
                </defs>
                <g clip-path="url(#us-flag-option)">
                  <path fill="#bd3d44" d="M0 0h640v480H0"/>
                  <path stroke="#fff" stroke-width="37" d="M0 55.3h640M0 129h640M0 203h640M0 277h640M0 351h640M0 425h640"/>
                  <path fill="#192f5d" d="M0 0h364.8v258.5H0"/>
                </g>
              </svg>
            </div>
            English
          </button>
          <button 
            @click="currentLang = 'es'; isOpen = false" 
            class="flex items-center gap-3 w-full py-2 px-4 rounded hover:bg-gray-100 text-left cursor-pointer"
            :class="{ 'bg-aqua/10 text-aqua font-semibold': currentLang === 'es', 'text-gray-700': currentLang !== 'es' }"
          >
            <div class="w-5 h-4 rounded-sm overflow-hidden">
              <svg class="w-full h-full" viewBox="0 0 640 480">
                <path fill="#aa151b" d="M0 0h640v480H0z"/>
                <path fill="#f1bf00" d="M0 120h640v240H0z"/>
              </svg>
            </div>
            Español
          </button>
        </div>
      </div>

      <!-- Mobile Call Button -->
      <div class="mt-6 px-4">
        <a href={`tel:${companyData.phone}`} class="block w-full">
          <button class="w-full bg-aqua text-white text-sm font-bold px-4 py-3 rounded hover:bg-aqua-dark flex items-center justify-center space-x-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            <span>{companyData.phone}</span>
          </button>
        </a>
      </div>
    </div>
  </div>
</header>

<!-- Spacer for fixed navbar -->
<div class="h-16 md:h-28"></div>

<script>
  // Navbar scroll effect
  const navbar = document.getElementById('navbar');
  const mainNav = document.getElementById('main-nav');
  
  if (navbar && mainNav) {
    window.addEventListener('scroll', () => {
      const currentScroll = window.pageYOffset;
      
      // Add shadow and background on scroll
      if (currentScroll > 50) {
        mainNav.classList.add('shadow-lg');
        mainNav.classList.remove('bg-white/95');
        mainNav.classList.add('bg-white');
      } else {
        mainNav.classList.remove('shadow-lg');
        mainNav.classList.add('bg-white/95');
        mainNav.classList.remove('bg-white');
      }
    });
  }
</script>

<style>
  /* Hide elements with x-cloak until Alpine initializes */
  [x-cloak] {
    display: none !important;
  }
  
