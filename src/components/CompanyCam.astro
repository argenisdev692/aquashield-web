---
interface Props {
  class?: string;
}

const { class: className } = Astro.props;

// Get CompanyCam Showcase ID from environment variable
const showcaseId = import.meta.env.COMPANYCAM_SHOWCASE_ID || '';
const hasShowcaseId = showcaseId && showcaseId !== '';
---

<section class:list={["section-container bg-silver-light !pt-4 md:!pt-6", className]} id="portfolio-showcase">
  <h2 class="section-title">Our Project Portfolio</h2>
  <p class="section-subtitle">
    See our completed restoration projects
  </p>
  
  <div class="mt-12">
    {hasShowcaseId ? (
      <!-- CompanyCam Showcase Integration -->
      <div 
        id="companycam-showcase-root" 
        data-showcase-id={showcaseId}
        class="rounded-2xl overflow-hidden shadow-xl bg-white min-h-[600px]"
      >
        <!-- CompanyCam will load here -->
        <div class="flex items-center justify-center h-[600px]">
          <div class="text-center">
            <svg class="animate-spin h-12 w-12 text-aqua mx-auto mb-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
              <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
              <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>
            <p class="text-gray-600">Loading portfolio...</p>
          </div>
        </div>
      </div>
    ) : (
      <!-- Fallback when no Showcase ID is configured -->
      <div class="rounded-2xl overflow-hidden shadow-xl bg-white p-8 text-center">
        <p class="text-muted-foreground mb-4">Portfolio showcase coming soon</p>
        <a href="#contact" class="btn-primary inline-block">
          Contact Us to See Our Work
        </a>
      </div>
    )}
  </div>
</section>

{hasShowcaseId && (
  <script define:vars={{ showcaseId }}>
    // CompanyCam Showcase initialization
    (function() {
      var ccShowcaseRoot = document.getElementById("companycam-showcase-root");
      if (!ccShowcaseRoot || !ccShowcaseRoot.attachShadow || !window.fetch) {
        console.error('CompanyCam: Browser requirements not met');
        return;
      }
      
      // Set the showcase ID
      ccShowcaseRoot.setAttribute('data-showcase-id', showcaseId);
      
      // Load CompanyCam script
      var ccShowcaseScript = document.createElement("script");
      ccShowcaseScript.src = 'https://showcase.companycam.com/bundle.js';
      ccShowcaseScript.type = "text/javascript";
      ccShowcaseScript.async = true;
      
      ccShowcaseScript.onload = function() {
        console.log('CompanyCam showcase loaded successfully');
      };
      
      ccShowcaseScript.onerror = function() {
        console.error('Failed to load CompanyCam showcase script');
        var errorDiv = document.createElement('div');
        errorDiv.className = 'p-8 text-center';
        errorDiv.innerHTML = '<p class="text-red-500">Failed to load portfolio. Please try again later.</p>';
        ccShowcaseRoot.innerHTML = '';
        ccShowcaseRoot.appendChild(errorDiv);
      };
      
      document.body.appendChild(ccShowcaseScript);
    })();
  </script>
)}
