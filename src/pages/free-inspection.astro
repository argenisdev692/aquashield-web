    <!-- Google Maps -->
    <script define:vars={{ googleMapsApiKey }}>
      function initMaps() {
        const defaultPos = { lat: 37.0902, lng: -95.7129 };
        const map = new google.maps.Map(
          document.getElementById("location-map"),
          {
            center: defaultPos,
            zoom: 4,
            mapTypeControl: false,
            streetViewControl: false,
            fullscreenControl: false,
          },
        );
        const marker = new google.maps.Marker({ map, visible: false });

        const addressInput = /** @type {HTMLInputElement} */ (
          document.getElementById("address_map_input")
        );
        const autocomplete = new google.maps.places.Autocomplete(addressInput, {
          types: ["address"],
          componentRestrictions: { country: "us" },
          fields: ["address_components", "geometry", "formatted_address"],
        });

        autocomplete.addListener("place_changed", () => {
          const place = autocomplete.getPlace();
          if (!place.geometry) return;

          const lat = place.geometry.location.lat();
          const lng = place.geometry.location.lng();

          /** @param {string} id @param {string|number} val */
          const setVal = (id, val) => {
            const el = document.getElementById(id);
            if (el) el.value = String(val);
          };

          setVal("latitude", lat);
          setVal("longitude", lng);
          map.setCenter({ lat, lng });
          map.setZoom(16);
          marker.setPosition({ lat, lng });
          marker.setVisible(true);

          let streetNum = "",
            route = "",
            city = "",
            state = "",
            zip = "";
          for (const comp of place.address_components) {
            switch (comp.types[0]) {
              case "street_number":
                streetNum = comp.long_name;
                break;
              case "route":
                route = comp.long_name;
                break;
              case "locality":
                city = comp.long_name;
                break;
              case "administrative_area_level_1":
                state = comp.short_name;
                break;
              case "postal_code":
                zip = comp.long_name;
                break;
            }
          }
          const addr1 = [streetNum, route].filter(Boolean).join(" ");
          addressInput.value = place.formatted_address || addr1;
          setVal("hidden_address", addr1);
          setVal("hidden_city", city);
          setVal("hidden_state", state);
          setVal("hidden_zipcode", zip);
          setVal("display_city", city);
          setVal("display_state", state);
          setVal("display_zipcode", zip);

          // Trigger validity check defined in main script
          document.dispatchEvent(new CustomEvent("maps-filled"));
        });
      }

      if (window.google && window.google.maps) {
        initMaps();
      } else {
        const s = document.createElement("script");
        s.src = `https://maps.googleapis.com/maps/api/js?key=${googleMapsApiKey}&libraries=places&callback=initMaps`;
        s.async = true;
        s.defer = true;
        document.head.appendChild(s);
        window.initMaps = initMaps;
      }
    </script>

    <!-- Form logic (TypeScript) -->
    <script>
      // ── Ambient declarations ──

      // ── Typed element references ──
      const form = document.getElementById("lead-form") as HTMLFormElement;
      const submitBtn = document.getElementById(
        "submit-btn",
      ) as HTMLButtonElement;
      const spinnerEl = document.getElementById("spinner") as HTMLElement;
      const btnText = document.getElementById("btn-text") as HTMLElement;
      const successDiv = document.getElementById(
        "success-alert",
      ) as HTMLElement;
      const errorDiv = document.getElementById("error-alert") as HTMLElement;

      function inp(id: string): HTMLInputElement {
        return document.getElementById(id) as HTMLInputElement;
      }

      // ── Error helpers ──
      function showError(fieldId: string, msg: string): void {
        const el = document.getElementById(`err-${fieldId}`);
        const input =
          document.getElementById(fieldId) ??
          form.querySelector<HTMLElement>(`[name="${fieldId}"]`);
        if (el) el.textContent = msg;
        if (input) input.classList.add("error");
      }
      function clearAllErrors(): void {
        document.querySelectorAll(".error-msg").forEach((e) => {
          e.textContent = "";
        });
        document
          .querySelectorAll(".input.error")
          .forEach((e) => e.classList.remove("error"));
      }

      // ── Formatters ──
      function formatPhone(val: string): string {
        const d = val.replace(/\D/g, "").substring(0, 10);
        if (d.length <= 3) return d.length ? `(${d}` : "";
        if (d.length <= 6) return `(${d.slice(0, 3)}) ${d.slice(3)}`;
        return `(${d.slice(0, 3)}) ${d.slice(3, 6)}-${d.slice(6)}`;
      }
      function formatName(val: string): string {
        return val
          .split(/\s+/)
          .filter(Boolean)
          .map(
            (w: string) => w.charAt(0).toUpperCase() + w.slice(1).toLowerCase(),
          )
          .join(" ");
      }

      // ── Enable/disable submit ──
      function checkValidity(): void {
        const first = inp("first_name").value.trim();
        const last = inp("last_name").value.trim();
        const phone = inp("phone").value.trim();
        const email = inp("email").value.trim();
        const address =
          inp("hidden_address").value.trim() ||
          inp("address_map_input").value.trim();
        const city = inp("hidden_city").value.trim();
        const state = inp("hidden_state").value.trim();
        const zip = inp("hidden_zipcode").value.trim();
        const insurance = form.querySelector(
          'input[name="insurance_property"]:checked',
        );
        submitBtn.disabled = !(
          first &&
          last &&
          phone.length >= 14 &&
          email &&
          address &&
          city &&
          state &&
          zip &&
          insurance
        );
      }

      // ── Event listeners ──
      inp("phone").addEventListener("input", function (this: HTMLInputElement) {
        this.value = formatPhone(this.value);
        checkValidity();
      });

      (["first_name", "last_name"] as const).forEach((id) => {
        inp(id).addEventListener("input", function (this: HTMLInputElement) {
          const pos = this.selectionStart ?? 0;
          const trail = this.value.endsWith(" ");
          this.value = formatName(this.value) + (trail ? " " : "");
          try {
            this.setSelectionRange(pos, pos);
          } catch {
            /* ignore */
          }
          checkValidity();
        });
      });

      ["email", "message", "address_2"].forEach((id) => {
        document.getElementById(id)?.addEventListener("input", checkValidity);
      });

      form
        .querySelectorAll<HTMLInputElement>('input[name="insurance_property"]')
        .forEach((r) => {
          r.addEventListener("change", checkValidity);
        });

      // Re-check after Maps autocomplete fills hidden fields
      document.addEventListener("maps-filled", checkValidity);

      // ── Submit handler ──
      form.addEventListener("submit", async (e: Event) => {
        e.preventDefault();
        clearAllErrors();
        setLoading(true);

        const city = inp("hidden_city").value.trim();
        const state = inp("hidden_state").value.trim();
        const zip = inp("hidden_zipcode").value.trim();

        if (!city || !state || !zip) {
          showError(
            "address_map_input",
            "Please select an address from the dropdown suggestions.",
          );
          setLoading(false);
          return;
        }

        // Read Turnstile token from form
        const turnstileInput = form.querySelector<HTMLInputElement>(
          'input[name="cf-turnstile-response"]',
        );
        const token = turnstileInput?.value ?? "";
        if (!token) {
          showError(
            "address_map_input",
            "Please complete the CAPTCHA verification.",
          );
          setLoading(false);
          return;
        }

        const lat = parseFloat(inp("latitude").value) || null;
        const lng = parseFloat(inp("longitude").value) || null;

        const insuranceEl = form.querySelector<HTMLInputElement>(
          'input[name="insurance_property"]:checked',
        );
        const smsEl = document.getElementById(
          "sms_consent",
        ) as HTMLInputElement | null;
        const messageEl = document.getElementById(
          "message",
        ) as HTMLTextAreaElement | null;

        const payload = {
          first_name: inp("first_name").value.trim(),
          last_name: inp("last_name").value.trim(),
          phone: inp("phone").value.trim(),
          email: inp("email").value.trim(),
          address: inp("hidden_address").value.trim(),
          address_2: inp("address_2").value.trim() || undefined,
          city,
          state,
          zipcode: zip,
          country: "US",
          insurance_property: insuranceEl?.value,
          message: messageEl?.value.trim() || undefined,
          sms_consent: smsEl?.checked ?? false,
          latitude: lat,
          longitude: lng,
          lead_source: "Facebook Ads",
          website: inp("website").value || "",
          "cf-turnstile-response": token,
        };

        try {
          const res = await fetch("/api/facebook-lead", {
            method: "POST",
            headers: {
              "Content-Type": "application/json",
              Accept: "application/json",
            },
            body: JSON.stringify(payload),
          });
          const data = (await res.json()) as Record<string, unknown>;

          if (res.ok && data["success"]) {
            showAlert(
              successDiv,
              (data["message"] as string | undefined) ??
                "Thank you! We will contact you shortly.",
            );
            form.reset();
            inp("display_city").value = "";
            inp("display_state").value = "";
            inp("display_zipcode").value = "";
          } else if (data["errors"] && typeof data["errors"] === "object") {
            Object.entries(data["errors"] as Record<string, unknown>).forEach(
              ([field, msgs]) => {
                const msg = Array.isArray(msgs)
                  ? String(msgs[0])
                  : String(msgs);
                showError(field, msg);
              },
            );
            showAlert(
              errorDiv,
              (data["message"] as string | undefined) ??
                "Please correct the errors below.",
            );
          } else {
            showAlert(
              errorDiv,
              (data["message"] as string | undefined) ??
                "An error occurred. Please try again.",
            );
          }
        } catch {
          showAlert(errorDiv, "Network error. Please try again later.");
        } finally {
          setLoading(false);
        }
      });

      function setLoading(val: boolean): void {
        submitBtn.disabled = val;
        spinnerEl.classList.toggle("active", val);
        btnText.textContent = val ? "Sending..." : "Send Request";
      }

      function showAlert(el: HTMLElement, msg: string): void {
        el.textContent = msg;
        el.classList.add("visible");
        el.scrollIntoView({ behavior: "smooth", block: "center" });
        setTimeout(() => el.classList.remove("visible"), 7000);
      }
    </script>
  </body>
</html>
