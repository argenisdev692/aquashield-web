---
import { getCompanyData, formatPhone } from "../lib/company";

const company = await getCompanyData();
const formattedPhone = formatPhone(company.phone);

const googleMapsApiKey = import.meta.env.PUBLIC_GOOGLE_MAPS_API_KEY ?? "";
const turnstileSiteKey = import.meta.env.PUBLIC_TURNSTILE_SITE_KEY ?? "";

const canonicalUrl = "https://aquashieldrestorationusa.com/free-inspection";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Get Your Free Inspection | AquaShield Restoration</title>
    <meta
      name="description"
      content="Request your free roof inspection from AquaShield Restoration. Our experts will assess storm, hail, and water damage at no cost to you."
    />
    <meta name="robots" content="noindex, nofollow" />
    <link rel="canonical" href={canonicalUrl} />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />

    <style>
      *,
      *::before,
      *::after {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }
      body {
        font-family: "Inter", sans-serif;
        background: #f3f4f6;
        min-height: 100vh;
        color: #111827;
      }

      .header {
        background: #1e293b;
        padding: 1rem 1.5rem;
        display: flex;
        justify-content: center;
        align-items: center;
      }
      .header img {
        height: 48px;
        width: auto;
      }

      .container {
        max-width: 760px;
        margin: 2rem auto;
        padding: 0 1rem 3rem;
      }

      .card {
        background: #fff;
        border-radius: 1rem;
        box-shadow: 0 4px 24px rgba(0, 0, 0, 0.1);
        overflow: hidden;
      }
      .card-header {
        background: linear-gradient(135deg, #0891b2 0%, #0e7490 100%);
        padding: 1.5rem 2rem;
        text-align: center;
      }
      .card-header h1 {
        color: #fff;
        font-size: 1.5rem;
        font-weight: 700;
        letter-spacing: -0.02em;
      }
      .card-header p {
        color: #cffafe;
        font-size: 0.9rem;
        margin-top: 0.4rem;
      }
      .card-body {
        padding: 2rem;
      }

      .alert {
        display: none;
        padding: 0.9rem 1.1rem;
        border-radius: 0.6rem;
        font-size: 0.875rem;
        margin-bottom: 1.25rem;
      }
      .alert-success {
        background: #d1fae5;
        color: #065f46;
        border: 1px solid #6ee7b7;
      }
      .alert-error {
        background: #fee2e2;
        color: #991b1b;
        border: 1px solid #fca5a5;
      }
      .alert.visible {
        display: block;
      }

      .form {
        display: flex;
        flex-direction: column;
        gap: 1.25rem;
      }
      .grid-2 {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1rem;
      }
      .grid-3 {
        display: grid;
        grid-template-columns: 1fr 1fr 1fr;
        gap: 1rem;
      }
      @media (max-width: 560px) {
        .grid-2,
        .grid-3 {
          grid-template-columns: 1fr;
        }
      }

      label {
        display: block;
        font-size: 0.875rem;
        font-weight: 500;
        color: #374151;
        margin-bottom: 0.35rem;
      }
      label .required {
        color: #ef4444;
      }
      label .optional {
        font-size: 0.75rem;
        color: #9ca3af;
        font-weight: 400;
      }

      .input {
        width: 100%;
        padding: 0.6rem 0.9rem;
        border: 1.5px solid #d1d5db;
        border-radius: 0.5rem;
        font-size: 0.9rem;
        font-family: inherit;
        color: #111827;
        background: #fff;
        transition:
          border-color 0.2s,
          box-shadow 0.2s;
        outline: none;
      }
      .input:focus {
        border-color: #0891b2;
        box-shadow: 0 0 0 3px rgba(8, 145, 178, 0.15);
      }
      .input.readonly-field {
        background: #f9fafb;
        color: #6b7280;
        cursor: not-allowed;
      }
      .input.error {
        border-color: #ef4444;
      }
      .error-msg {
        font-size: 0.75rem;
        color: #ef4444;
        min-height: 1rem;
        margin-top: 0.2rem;
      }
      textarea.input {
        resize: vertical;
        min-height: 96px;
      }

      #location-map {
        width: 100%;
        height: 180px;
        border-radius: 0.6rem;
        background: #e5e7eb;
        border: 1.5px solid #d1d5db;
        margin-top: 0.35rem;
      }

      .insurance-group {
        display: flex;
        gap: 1rem;
        justify-content: center;
        margin-top: 0.5rem;
      }
      .ins-radio {
        display: none;
      }
      .ins-label {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 90px;
        padding: 0.6rem 1rem;
        border: 1.5px solid #d1d5db;
        border-radius: 0.5rem;
        font-size: 0.9rem;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.18s;
        user-select: none;
      }
      .ins-radio:checked + .ins-label {
        background: #0891b2;
        color: #fff;
        border-color: #0e7490;
      }
      .ins-label:hover {
        border-color: #0891b2;
        color: #0891b2;
      }

      .consent-row {
        display: flex;
        align-items: flex-start;
        gap: 0.6rem;
      }
      .consent-row input[type="checkbox"] {
        margin-top: 3px;
        width: 1.05rem;
        height: 1.05rem;
        accent-color: #0891b2;
        flex-shrink: 0;
        cursor: pointer;
      }
      .consent-row span {
        font-size: 0.8rem;
        color: #6b7280;
        line-height: 1.5;
      }
      .consent-row a {
        color: #0891b2;
        text-decoration: underline;
      }

      .btn-submit {
        width: 100%;
        padding: 0.85rem;
        background: linear-gradient(135deg, #0891b2, #0e7490);
        color: #fff;
        font-size: 1rem;
        font-weight: 600;
        border: none;
        border-radius: 0.6rem;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        transition:
          opacity 0.2s,
          transform 0.1s;
      }
      .btn-submit:hover:not(:disabled) {
        opacity: 0.92;
        transform: translateY(-1px);
      }
      .btn-submit:disabled {
        opacity: 0.65;
        cursor: not-allowed;
        transform: none;
      }
      .spinner {
        display: none;
        width: 18px;
        height: 18px;
        border: 2px solid rgba(255, 255, 255, 0.4);
        border-top-color: #fff;
        border-radius: 50%;
        animation: spin 0.7s linear infinite;
      }
      .spinner.active {
        display: block;
      }
      @keyframes spin {
        to {
          transform: rotate(360deg);
        }
      }

      .footer-link {
        text-align: center;
        margin-top: 1.5rem;
        font-size: 0.85rem;
        color: #6b7280;
      }
      .footer-link a {
        color: #0891b2;
        text-decoration: underline;
      }
      .section-label {
        font-size: 0.75rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.06em;
        color: #9ca3af;
        border-bottom: 1px solid #e5e7eb;
        padding-bottom: 0.4rem;
        margin-bottom: -0.25rem;
      }
    </style>
