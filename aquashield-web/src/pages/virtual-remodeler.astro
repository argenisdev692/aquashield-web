---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Virtual Remodeler | AquaShield Restoration LLC">
  <Navbar />
  <main>
    <section class="relative py-20 bg-gradient-navy text-white">
      <div class="container mx-auto px-4">
        <h1 class="text-4xl md:text-5xl font-bold mb-4">Virtual Remodeler Tool</h1>
        <p class="text-xl text-white/80 max-w-3xl">
          Visualize your restoration project before we begin. See how different materials and colors will look on your property.
        </p>
      </div>
    </section>
    
    <section class="section-container bg-white text-center">
      <h2 class="section-title">Coming Soon</h2>
      <p class="section-subtitle">
        Our virtual remodeler tool is currently under development. Check back soon to visualize your dream restoration project!
      </p>
      <a href="#contact" class="btn-primary mt-8 inline-block">
        Contact Us for a Free Consultation
      </a>
    </section>
  </main>
  <Footer />
</Layout>
