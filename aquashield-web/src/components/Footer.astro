---
// Footer component for AquaShield Restoration
// Site-wide footer with navigation, contact info, and legal links

interface Props {
  class?: string;
}

const { class: className } = Astro.props;

const currentYear = new Date().getFullYear();

const companyInfo = {
  name: "AquaShield Restoration LLC",
  tagline: "Total Restoration & Protection",
  phone: "(555) 123-4567",
  email: "info@aquashieldrestoration.com",
  address: "123 Restoration Way, Suite 100",
  city: "Houston, TX 77001",
};

const quickLinks = [
  { name: "Home", href: "#" },
  { name: "Services", href: "#services" },
  { name: "About Us", href: "#about" },
  { name: "Why Choose Us", href: "#why-us" },
  { name: "Testimonials", href: "#testimonials" },
  { name: "Contact", href: "#contact" },
];

const services = [
  { name: "Water Damage Restoration", href: "#services" },
  { name: "Emergency Response", href: "#services" },
  { name: "Mold Remediation", href: "#services" },
  { name: "Structural Drying", href: "#services" },
  { name: "Reconstruction", href: "#services" },
  { name: "Insurance Claims", href: "#services" },
];

const legalLinks = [
  { name: "Privacy Policy", href: "/privacy" },
  { name: "Terms of Service", href: "/terms" },
  { name: "Accessibility", href: "/accessibility" },
  { name: "Sitemap", href: "/sitemap" },
];

const socialLinks = [
  {
    name: "Facebook",
    href: "#",
    icon: `<path d="M9 8h-3v4h3v12h5v-12h3.642l.358-4h-4v-1.667c0-.955.192-1.333 1.115-1.333h2.885v-5h-3.808c-3.596 0-5.192 1.583-5.192 4.615v3.385z"/>`,
  },
  {
    name: "Instagram",
    href: "#",
    icon: `<path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>`,
  },
  {
    name: "LinkedIn",
    href: "#",
    icon: `<path d="M4.98 3.5c0 1.381-1.11 2.5-2.48 2.5s-2.48-1.119-2.48-2.5c0-1.38 1.11-2.5 2.48-2.5s2.48 1.12 2.48 2.5zm.02 4.5h-5v16h5v-16zm7.982 0h-4.968v16h4.969v-8.399c0-4.67 6.029-5.052 6.029 0v8.399h4.988v-10.131c0-7.88-8.922-7.593-11.018-3.714v-2.155z"/>`,
  },
  {
    name: "YouTube",
    href: "#",
    icon: `<path d="M19.615 3.184c-3.604-.246-11.631-.245-15.23 0-3.897.266-4.356 2.62-4.385 8.816.029 6.185.484 8.549 4.385 8.816 3.6.245 11.626.246 15.23 0 3.897-.266 4.356-2.62 4.385-8.816-.029-6.185-.484-8.549-4.385-8.816zm-10.615 12.816v-8l8 3.993-8 4.007z"/>`,
  },
];
---

<footer class:list={["bg-navy text-white", className]}>
  <!-- Main footer content -->
  <div class="container mx-auto px-4 py-16">
    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-12">
      <!-- Company info -->
      <div class="lg:col-span-1">
        <!-- Logo -->
        <a href="#" class="inline-block mb-6">
          <div class="flex items-center gap-3">
            <!-- Shield logo icon -->
            <svg 
              xmlns="http://www.w3.org/2000/svg" 
              viewBox="0 0 100 100" 
              class="h-12 w-12"
              aria-hidden="true"
            >
              <!-- Shield shape -->
              <path 
                d="M50 5 L90 20 L90 45 C90 70 70 90 50 95 C30 90 10 70 10 45 L10 20 Z" 
                fill="currentColor"
                class="text-aqua"
              />
              <!-- House silhouette -->
              <path 
                d="M50 25 L70 40 L70 65 L55 65 L55 50 L45 50 L45 65 L30 65 L30 40 Z" 
                fill="currentColor"
                class="text-navy"
              />
              <!-- Wave -->
              <path 
                d="M25 55 Q35 50 45 55 Q55 60 65 55 Q75 50 85 55" 
                stroke="currentColor"
                stroke-width="4"
                fill="none"
                class="text-white"
              />
            </svg>
            <div>
              <span class="text-xl font-bold">
                <span class="text-white">Aqua</span><span class="text-aqua">Shield</span>
              </span>
              <div class="text-xs text-gray-400">Restoration LLC</div>
            </div>
          </div>
        </a>
        
        <p class="text-gray-400 mb-6 leading-relaxed">
          {companyInfo.tagline}. Professional water damage restoration services 
          available 24/7 for residential and commercial properties.
        </p>

        <!-- Contact info -->
        <div class="space-y-3">
          <a 
            href={`tel:${companyInfo.phone.replace(/[^0-9]/g, '')}`}
            class="flex items-center gap-3 text-gray-300 hover:text-aqua transition-colors"
          >
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            {companyInfo.phone}
          </a>
          <a 
            href={`mailto:${companyInfo.email}`}
            class="flex items-center gap-3 text-gray-300 hover:text-aqua transition-colors"
          >
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            {companyInfo.email}
          </a>
          <div class="flex items-start gap-3 text-gray-300">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            <div>
              {companyInfo.address}<br />
              {companyInfo.city}
            </div>
          </div>
        </div>
      </div>

      <!-- Quick links -->
      <div>
        <h4 class="text-lg font-bold mb-6">Quick Links</h4>
        <ul class="space-y-3">
          {quickLinks.map((link) => (
            <li>
              <a 
                href={link.href}
                class="text-gray-400 hover:text-aqua transition-colors inline-flex items-center gap-2"
              >
                <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Services -->
      <div>
        <h4 class="text-lg font-bold mb-6">Our Services</h4>
        <ul class="space-y-3">
          {services.map((service) => (
            <li>
              <a 
                href={service.href}
                class="text-gray-400 hover:text-aqua transition-colors inline-flex items-center gap-2"
              >
                <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
                {service.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Newsletter & Social -->
      <div>
        <h4 class="text-lg font-bold mb-6">Stay Connected</h4>
        <p class="text-gray-400 mb-4">
          Subscribe to our newsletter for tips on protecting your property from water damage.
        </p>
        
        <!-- Newsletter form -->
        <form class="mb-8">
          <div class="flex gap-2">
            <input
              type="email"
              placeholder="Enter your email"
              class="flex-1 px-4 py-3 bg-white/10 border border-white/20 rounded-xl text-white placeholder:text-gray-500 focus:outline-none focus:border-transparent newsletter-input"
            />
            <button
              type="submit"
              class="px-4 py-3 bg-aqua text-white rounded-xl hover:bg-aqua/90 transition-colors"
              aria-label="Subscribe"
            >
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
              </svg>
            </button>
          </div>
        </form>

        <!-- Social links -->
        <div>
          <div class="text-sm text-gray-400 mb-4">Follow Us</div>
          <div class="flex gap-3">
            {socialLinks.map((social) => (
              <a
                href={social.href}
                class="w-10 h-10 bg-white/10 rounded-xl flex items-center justify-center text-gray-400 hover:bg-aqua hover:text-white transition-all duration-300"
                aria-label={social.name}
              >
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                  <Fragment set:html={social.icon} />
                </svg>
              </a>
            ))}
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Certifications bar -->
  <div class="border-t border-white/10">
    <div class="container mx-auto px-4 py-8">
      <div class="flex flex-wrap justify-center items-center gap-8 opacity-60">
        <div class="flex items-center gap-2 text-sm">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
          </svg>
          IICRC Certified
        </div>
        <div class="flex items-center gap-2 text-sm">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
          </svg>
          Licensed & Insured
        </div>
        <div class="flex items-center gap-2 text-sm">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
          </svg>
          A+ BBB Rating
        </div>
        <div class="flex items-center gap-2 text-sm">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          24/7 Emergency Service
        </div>
      </div>
    </div>
  </div>

  <!-- Bottom bar -->
  <div class="border-t border-white/10">
    <div class="container mx-auto px-4 py-6">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4">
        <div class="text-gray-400 text-sm text-center md:text-left">
          Â© {currentYear} {companyInfo.name}. All rights reserved.
        </div>
        <div class="flex flex-wrap justify-center gap-6">
          {legalLinks.map((link) => (
            <a 
              href={link.href}
              class="text-gray-400 text-sm hover:text-aqua transition-colors"
            >
              {link.name}
            </a>
          ))}
        </div>
      </div>
    </div>
  </div>
</footer>

<style>
  /* Ensure footer links have proper focus states */
  footer a:focus {
    outline: 2px solid var(--aqua);
    outline-offset: 2px;
  }

  /* Smooth transitions */
  footer a {
    transition: color 0.2s ease;
  }

  /* Newsletter input focus state */
  .newsletter-input:focus {
    box-shadow: 0 0 0 2px var(--color-aqua);
  }
</style>
