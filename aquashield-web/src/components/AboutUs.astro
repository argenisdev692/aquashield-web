---
// About Us section component for AquaShield Restoration
// Company mission, values, experience, and service area

interface Props {
  class?: string;
}

const { class: className } = Astro.props;

const companyData = {
  name: "AquaShield Restoration LLC",
  yearsExperience: 15,
  projectsCompleted: 5000,
  satisfactionRate: 100,
  teamMembers: 50,
};

const values = [
  {
    title: "Rapid Response",
    description: "We understand that water damage emergencies can't wait. Our team responds within 60 minutes, 24/7.",
    icon: "clock",
  },
  {
    title: "Expert Technicians",
    description: "Our IICRC-certified technicians bring years of experience and the latest restoration techniques.",
    icon: "badge",
  },
  {
    title: "Customer First",
    description: "Your satisfaction is our priority. We communicate clearly and work until you're completely satisfied.",
    icon: "heart",
  },
  {
    title: "Quality Guaranteed",
    description: "We stand behind our work with comprehensive warranties and follow-up inspections.",
    icon: "shield",
  },
];

const icons: Record<string, string> = {
  clock: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />`,
  badge: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />`,
  heart: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />`,
  shield: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />`,
};
---

<section id="about" class:list={["section-padding bg-white", className]}>
  <div class="container mx-auto px-4">
    <div class="grid lg:grid-cols-2 gap-12 lg:gap-20 items-center">
      <!-- Left column - Image/Visual -->
      <div class="relative fade-in-section">
        <!-- Main image placeholder with shield design -->
        <div class="relative rounded-3xl overflow-hidden bg-gradient-to-br from-navy to-navy-light aspect-[4/3]">
          <!-- Decorative elements -->
          <div class="absolute inset-0 flex items-center justify-center">
            <svg viewBox="0 0 200 200" class="w-3/4 h-3/4 opacity-20" xmlns="http://www.w3.org/2000/svg">
              <path 
                d="M100 10 L180 40 L180 100 C180 150 140 180 100 190 C60 180 20 150 20 100 L20 40 Z" 
                fill="none" 
                stroke="var(--aqua)" 
                stroke-width="4"
              />
              <!-- Wave inside -->
              <path 
                d="M40 110 Q70 90 100 110 Q130 130 160 110" 
                fill="none" 
                stroke="var(--aqua)" 
                stroke-width="6"
                stroke-linecap="round"
              />
              <!-- House -->
              <path 
                d="M70 100 L100 70 L130 100 L130 130 L70 130 Z M90 130 L90 110 L110 110 L110 130" 
                fill="var(--aqua)" 
                opacity="0.5"
              />
            </svg>
          </div>
          
          <!-- Overlay text -->
          <div class="absolute inset-0 flex items-center justify-center">
            <div class="text-center text-white">
              <div class="text-6xl md:text-7xl font-bold text-aqua mb-2">{companyData.yearsExperience}+</div>
              <div class="text-xl md:text-2xl font-medium">Years of Excellence</div>
            </div>
          </div>
        </div>

        <!-- Floating stats card -->
        <div class="absolute -bottom-6 -right-6 md:bottom-8 md:-right-8 bg-white rounded-2xl shadow-xl p-6 border border-gray-100">
          <div class="flex items-center gap-4">
            <div class="w-14 h-14 bg-aqua/10 rounded-xl flex items-center justify-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7 text-aqua" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
            </div>
            <div>
              <div class="text-2xl font-bold text-navy">{companyData.projectsCompleted.toLocaleString()}+</div>
              <div class="text-gray-600 text-sm">Projects Completed</div>
            </div>
          </div>
        </div>

        <!-- Decorative dots -->
        <div class="absolute -top-4 -left-4 w-24 h-24 opacity-20">
          <div class="grid grid-cols-4 gap-2">
            {Array.from({ length: 16 }).map(() => (
              <div class="w-2 h-2 bg-aqua rounded-full"></div>
            ))}
          </div>
        </div>
      </div>

      <!-- Right column - Content -->
      <div class="fade-in-section" style="animation-delay: 0.2s;">
        <span class="inline-block text-aqua font-bold text-xl md:text-2xl uppercase tracking-widest mb-4">
          About Us
        </span>
        <h2 class="text-4xl md:text-5xl lg:text-6xl font-bold text-navy mb-6">
          Your Trusted Partner in
          <span class="text-aqua">Water Damage Restoration</span>
        </h2>
        
        <p class="text-gray-600 text-lg mb-6 leading-relaxed">
          At <strong class="text-navy">AquaShield Restoration</strong>, we understand that water damage 
          can be devastating. That's why we've dedicated ourselves to providing fast, professional, 
          and compassionate restoration services to homeowners and businesses throughout the region.
        </p>
        
        <p class="text-gray-600 mb-8 leading-relaxed">
          Founded on the principles of integrity, excellence, and customer care, our team of 
          certified professionals uses state-of-the-art equipment and proven techniques to 
          restore your property quickly and completely. We're not just restoring buildings â€“ 
          we're restoring peace of mind.
        </p>

        <!-- Mission statement -->
        <div class="bg-gray-50 rounded-2xl p-6 mb-8 border-l-4 border-aqua">
          <h3 class="text-lg font-bold text-navy mb-2">Our Mission</h3>
          <p class="text-gray-600 italic">
            "To provide exceptional water damage restoration services with integrity, speed, 
            and compassion, helping our community recover and rebuild stronger than before."
          </p>
        </div>

        <!-- Values grid -->
        <div class="grid sm:grid-cols-2 gap-6">
          {values.map((value, index) => (
            <div 
              class="flex gap-4 items-start group"
              style={`animation-delay: ${0.1 * index}s`}
            >
              <div class="w-12 h-12 bg-aqua/10 rounded-xl flex items-center justify-center flex-shrink-0 group-hover:bg-aqua transition-colors duration-300">
                <svg 
                  xmlns="http://www.w3.org/2000/svg" 
                  class="h-6 w-6 text-aqua group-hover:text-white transition-colors duration-300" 
                  fill="none" 
                  viewBox="0 0 24 24" 
                  stroke="currentColor"
                  set:html={icons[value.icon]}
                />
              </div>
              <div>
                <h4 class="font-bold text-navy mb-1">{value.title}</h4>
                <p class="text-gray-600 text-sm leading-relaxed">{value.description}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>

    <!-- Service area section -->
    <div class="mt-20 pt-16 border-t border-gray-200 fade-in-section">
      <div class="text-center max-w-3xl mx-auto mb-12">
        <h3 class="text-2xl md:text-3xl font-bold text-navy mb-4">
          Proudly Serving Our Community
        </h3>
        <p class="text-gray-600">
          We provide water damage restoration services throughout the greater metropolitan area 
          and surrounding communities. No matter where you are, help is just a phone call away.
        </p>
      </div>

      <!-- Service area stats -->
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
        <div class="text-center p-6 bg-gradient-to-br from-navy to-navy-light rounded-2xl shadow-lg transform transition-all duration-300 hover:scale-105 hover:shadow-xl animate-fade-in-up" style="animation-delay: 0.1s;">
          <div class="text-3xl md:text-4xl font-bold text-aqua mb-2">50+</div>
          <div class="text-white/80 text-sm">Miles Service Radius</div>
        </div>
        <div class="text-center p-6 bg-gradient-to-br from-navy to-navy-light rounded-2xl shadow-lg transform transition-all duration-300 hover:scale-105 hover:shadow-xl animate-fade-in-up" style="animation-delay: 0.2s;">
          <div class="text-3xl md:text-4xl font-bold text-aqua mb-2">{companyData.teamMembers}+</div>
          <div class="text-white/80 text-sm">Team Members</div>
        </div>
        <div class="text-center p-6 bg-gradient-to-br from-navy to-navy-light rounded-2xl shadow-lg transform transition-all duration-300 hover:scale-105 hover:shadow-xl animate-fade-in-up" style="animation-delay: 0.3s;">
          <div class="text-3xl md:text-4xl font-bold text-aqua mb-2">24/7</div>
          <div class="text-white/80 text-sm">Emergency Availability</div>
        </div>
        <div class="text-center p-6 bg-gradient-to-br from-navy to-navy-light rounded-2xl shadow-lg transform transition-all duration-300 hover:scale-105 hover:shadow-xl animate-fade-in-up" style="animation-delay: 0.4s;">
          <div class="text-3xl md:text-4xl font-bold text-aqua mb-2">{companyData.satisfactionRate}%</div>
          <div class="text-white/80 text-sm">Customer Satisfaction</div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  /* Fade in animation */
  .fade-in-section {
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 0.8s ease-out forwards;
  }

  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .fade-in-section {
      animation: none;
      opacity: 1;
      transform: none;
    }
  }
</style>
