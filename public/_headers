# Cache control headers for static assets
# These improve Google PageSpeed scores by enabling efficient cache lifetimes

# Images - cache for 1 year (31536000 seconds)
/img/*
  Cache-Control: public, max-age=31536000, immutable

# Video files - cache for 1 year
/*.mp4
  Cache-Control: public, max-age=31536000, immutable

/img/*.mp4
  Cache-Control: public, max-age=31536000, immutable

# Logo and favicon - cache for 1 year
/*.png
  Cache-Control: public, max-age=31536000, immutable

/*.svg
  Cache-Control: public, max-age=31536000, immutable

/*.ico
  Cache-Control: public, max-age=31536000, immutable

# Webp images - cache for 1 year
/*.webp
  Cache-Control: public, max-age=31536000, immutable

# Fonts - cache for 1 year
/*.woff
  Cache-Control: public, max-age=31536000, immutable

/*.woff2
  Cache-Control: public, max-age=31536000, immutable

/*.ttf
  Cache-Control: public, max-age=31536000, immutable

/*.eot
  Cache-Control: public, max-age=31536000, immutable

# CSS and JS from _astro folder - cache for 1 year (files are hashed, safe to cache long)
/_astro/*.css
  Cache-Control: public, max-age=31536000, immutable

/_astro/*.js
  Cache-Control: public, max-age=31536000, immutable

/_astro/*
  Cache-Control: public, max-age=31536000, immutable

# HTML pages - cache for 1 hour, revalidate
/*.html
  Cache-Control: public, max-age=3600, must-revalidate

# Root HTML files
/
  Cache-Control: public, max-age=3600, must-revalidate

# Default security headers
/*
  X-Content-Type-Options: nosniff
  X-Frame-Options: DENY
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: geolocation=(), microphone=(), camera=()
